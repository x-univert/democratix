{
  "name": "democratix",
  "version": "0.1.0",
  "description": "Plateforme de vote décentralisée sur MultiversX",
  "repository": {
    "type": "git",
    "url": "https://github.com/[org]/democratix.git"
  },
  "author": "DEMOCRATIX Contributors",
  "license": "AGPL-3.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "setup": "npm install && npm run setup:docker",
    "setup:docker": "docker-compose up -d",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend && npm run build:contracts",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:contracts": "cd contracts && ./build.sh",
    "test": "npm run test:backend && npm run test:frontend && npm run test:contracts",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:contracts": "cd contracts && cargo test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules contracts/target"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "prettier": "^3.1.1"
  }
}
